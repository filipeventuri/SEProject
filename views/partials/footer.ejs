<script>
  document.getElementById("post-trigger").addEventListener("click", async function (event) {
      event.preventDefault(); // Evita o comportamento padrão do link

      const url = this.getAttribute("data-url"); // Obtém a URL da rota POST
      try {
          const response = await fetch(url, {
              method: "POST",
          });

          if (response.ok) {
              alert("Denúncia criada com sucesso!");
          } else {
              alert("Erro ao criar denúncia. Tente novamente.");
          }
      } catch (error) {
          console.error("Erro na requisição:", error);
          alert("Erro na conexão com o servidor.");
      }
  });
</script>
